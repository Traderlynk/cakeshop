<?xml version="1.0" encoding="UTF-8" ?>
<plugin>
    <author>igniterealtime.org</author>
    <class>org.ifsoft.cakeshop.openfire.PluginImpl</class>
    <name>Cakeshop</name>
    <description>Enables Openfire to become an Ethereum node.</description>
    <licenseType>Apache 2.0</licenseType>
    <version>0.0.1</version>
    <date>01/18/2018</date>
    <minServerVersion>4.0.0</minServerVersion>

   <adminconsole>
        <tab id="tab-server">
            <sidebar id="siderbar-cakeshop" name="${plugin.title}" description="${plugin.title.description}" >
                <item id="cakeshop-settings" name="${config.page.settings}" description="${config.page.settings.description}" url="cakeshop.jsp"/>
            </sidebar>
        </tab>
    </adminconsole> 
</plugin>
